<Window x:Class="hoteLL.Reserv"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hoteLL"
        mc:Ignorable="d"
        Title="Reserv" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="ReservationsDataGrid"/>
        <ComboBox x:Name="ReservationsComboBox" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Content="Переключить" HorizontalAlignment="Center" Margin="0,333,0,0" VerticalAlignment="Top" Height="36" Width="120" Click="Button_Click"/>

    </Grid>
</Window>
